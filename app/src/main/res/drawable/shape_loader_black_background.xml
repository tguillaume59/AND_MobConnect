<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp"/>
            <gradient android:angle="0" android:startColor="@color/background_shape_loader_transparent" android:endColor="@color/background_shape_loader_transparent" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp"/>
            <gradient android:angle="0" android:startColor="@color/background_shape_loader_transparent" android:endColor="@color/background_shape_loader_transparent" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp"/>
            <gradient android:angle="0" android:startColor="@color/background_shape_loader_transparent" android:endColor="@color/background_shape_loader_transparent" />
        </shape>
    </item>
</selector>